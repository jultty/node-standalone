{
  "name": "pkg",
  "type": "module",
  "scripts": {
    "dev-test": "NODE_OPTIONS=--experimental-vm-modules jest --watchAll --noStackTrace",
    "lint": "eslint .",
    "format-check": "prettier -c src/*.js",
    "format": "prettier -w src/*.js",
    "transpile": "rollup --config rollup.config.js",
    "build": "pkg package.json",
    "start": "./dist/pkg",
    "wait": "wait-on http://localhost:3000",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose",
    "stop": "kill $(lsof -t -i:3000)"
  },
  "bin": "dist/index.cjs",
  "pkg": {
    "targets": [
      "node16"
    ],
    "outputPath": "dist",
    "options": [
      "experimental-modules"
    ]
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.2",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "supertest": "^6.3.3",
    "wait-on": "^7.0.1"
  },
  "jest": {
    "verbose": false,
    "transform": {},
    "detectOpenHandles": true,
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "/tests/*",
      "/dist/*",
      "/docs/*"
    ],
    "rules": {
      "no-warning-comments": "error",
      "no-use-before-define": "error",
      "no-unused-expressions": "error",
      "no-shadow": "error",
      "no-invalid-this": "error",
      "default-param-last": "error",
      "camelcase": [
        "error",
        {
          "ignoreDestructuring": true,
          "ignoreImports": true,
          "ignoreGlobals": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "rollup.config.js"
  ]
}
